<?xml version="1.0" encoding="utf-8"?>
<executable>
  <category>
  Converters
  </category>
  <title>
  Dicom to Nrrd
  </title>
  <description>
  Converts diffusion weighted MR images in dicom series into Nrrd format.
  </description>
  <version>0.1.0.$Revision: 1.1.1.1 $(alpha)</version>
  <documentation-url></documentation-url>
  <license></license>
  <contributor>Xiaodong Tao</contributor>
<acknowledgements>
This work is part of the National Alliance for Medical Image Computing (NAMIC), funded by the National Institutes of Health through the NIH Roadmap for Medical Research, Grant U54 EB005149.
</acknowledgements>

  <parameters>
    <label>IO</label>
    <description>Input/output parameters</description>

    <directory>
      <name>inputDicom</name>
      <label>Dicom Directory</label>
      <channel>input</channel>
      <index>0</index>
      <description>Directory holding Dicom series</description>
    </directory>

    <directory>
      <name>outputDir</name>
      <label>Output Directory</label>
      <channel>output</channel>
      <index>1</index>
      <description>Directory holding output nrrd files</description>
    </directory>

    <string>
      <name>outputFileName</name>
      <label>Nrrd header (.nhdr)</label>
      <channel>output</channel>
      <index>2</index>
      <description>Nrrd header file name</description>
    </string>
  </parameters>

</executable>
